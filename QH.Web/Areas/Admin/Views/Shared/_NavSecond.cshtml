@model List<QH.Models.MenusModel>
@{
    if (Model.Count > 0)
    {
        @foreach (var item in Model.Where(c => c.ParentId==0 ))
        {
            <li class="layui-nav-item">
                <a href="javascript:;" lay-tips="@item.Label" lay-direction="2">
                    <i class="layui-icon">@Html.Raw(item.Icon) </i>
                    <cite>@item.Label</cite>
                </a>
                <dl class="layui-nav-child">
                    @if (Model.Where(c => c.ParentId == item.Id).Count() > 0)
                    {
                        foreach (var item2 in Model.Where(c => c.ParentId == item.Id))
                        {
                            <dd>
                                <a lay-href="@(item2.Path)">@item2</a>
                            </dd>
                        }
                    }
                </dl>
            </li>
        }
    }
}
